<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Table: <%= tableName %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Edit Table: <%= tableName %></h1>
    <form id="editForm" action="/database-overhaul/<%= tableName %>/update" method="POST">
        <button type="submit" class="btn btn-success">Save Changes</button>
      <table class="table table-bordered">
        <thead>
          <tr>
            <% Object.keys(data[0]).forEach(key => { %>
              <th><%= key %></th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((row, rowIndex) => { %>
            <tr>
              <% Object.values(row).forEach((value, colIndex) => { %>
                <td>
                  <input type="text" name="data[<%= rowIndex %>][<%= Object.keys(row)[colIndex] %>]" value="<%= value %>" class="form-control">
                </td>
              <% }) %>
            </tr>
          <% }) %>
        </tbody>
      </table>
      
    </form>
  </div>
</body>
</html>
