<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Database Overhaul</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Database Overhaul</h1>
    <div class="row">
      <% tables.forEach(table => { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header"><%= table.name %></div>
            <ul class="list-group list-group-flush">
              <% table.data.forEach(row => { %>
                <li class="list-group-item">
                  <%= JSON.stringify(row).substring(0, 50) %>...
                </li>
              <% }) %>
            </ul>
            <div class="card-footer">
              <button onclick="window.location.href='/database-overhaul/<%= table.name %>'" class="btn btn-primary">Edit</button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
